{
  "compilerOptions": {
    "target": "es5",
    "declarationDir": "dist",
    "declarationMap": true,
    "declaration": true,
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "include": ["src/components/react-sortable", "local-types"],
  "exclude": ["node_modules", "__tests__", "___exclude__"]
}
