{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "declarationDir": "dist",
      "declarationMap": true,
      "declaration": true,
      "module":"es6",
      "noImplicitAny": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": true,
      "jsx": "react",
      "skipLibCheck": true,
    "downlevelIteration": true

    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "__tests__"
    ]
  }
  